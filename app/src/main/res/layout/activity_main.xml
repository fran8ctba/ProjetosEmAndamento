<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.opet.projetosemandamento.MainActivity">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/editNomeProjeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/textInicioInputProjeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Inicio:__/__/____"/>

        <TextView
            android:id="@+id/textEntregaInputProjeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrega:__/__/____"/>

        <CheckBox
            android:id="@+id/checkBoxFinalizarProjeto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Projeto finalizado?" />

        <Button
            android:text="Salvar"
            android:onClick="salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <GridLayout
            android:rowCount="2"
            android:columnCount="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:text="Nome do Projeto: "
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textNomeProjeto"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:text="Data de Inicio:"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textInicioProjeto"
                android:textSize="16sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Data de Entrga:"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textEntregaProjeto"
                android:textSize="16sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Status:"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textStatus"
                android:textSize="16sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />


        </GridLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
